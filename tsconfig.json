{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "target": "es2017",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types", // domyślne
      "./src/types" // ewentualne własne moduły
    ],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/types/**/*.d.ts"]
}
